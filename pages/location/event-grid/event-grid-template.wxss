/* pages/location/event-grid/event-grid.wxss */

.event-wrapper {
  width: 175rpx;
  display: inline-block;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.event-wrapper:first-child {
  margin-left: 0rpx;
}

.event-wrapper:last-child {
  margin-right: 0rpx;
}

.event-content .event-poster {
  width: 175rpx;
  height: 260rpx;
}

.event-content  .event-summary {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.event-content  .event-title {
  display: inline-block;
  color: #4a4a4a;
  font-size: 26rpx;
  height: 60rpx;
  font-weight: 600;
  word-break: break-all;
  white-space: pre-line;
  text-overflow: ellipsis;
  overflow: hidden;
  line-height: 30rpx;
  width: 175rpx;
}

.event-content .event-time {
  width: 175rpx;
  color: #9e9e9e;
  font-size: 24rpx;
}
